<Window x:Class="SignalR_Demo.WPF_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       
        Title="SignalR_Demo.WPF_Client"
        
        Height="450" Width="800">
    <StackPanel Margin="4">
        <Label Content="Введите логин"/>
        <TextBox x:Name="InputUserName" />
        
        <Label Content="Введите сообщение"/>
        <TextBox x:Name="InputMessage" />
        
        <Button x:Name="ButtonSend" 
                Content="Отправить" 
                IsEnabled="False"
                Click="Button_Click"/>
        
        <ListBox x:Name="ChatBox" />
    </StackPanel>
</Window>
